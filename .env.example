# Configuração do Banco de Dados SQL Server
DB_SERVER=localhost
DB_PORT=1433
DB_DATABASE=mdfe_system
DB_USER=sa
DB_PASSWORD=YourPassword123!
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# Configuração do Servidor
PORT=5000
NODE_ENV=development

# JWT Secret (MUDE ISSO EM PRODUÇÃO!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Configurações da Biblioteca MDFe_Util
# Caminho para a DLL MDFe_Util (ajuste conforme sua instalação)
MDFE_UTIL_PATH=./MDFe_Util_v3.10/MDFe_Util.dll

# Configurações do Certificado Digital
CERTIFICADO_PATH=./MDFe_Util_v3.10/MDFe_Util/Certificados/Associacao.pfx
CERTIFICADO_SENHA=associacao

# Configurações SEFAZ
# 1=Produção, 2=Homologação
AMBIENTE_SEFAZ=2

# Licença da biblioteca MDFe_Util (obter com o fornecedor)
LICENCA_MDFE=

# Configurações de Log
LOG_LEVEL=info

# Configurações de CORS (para desenvolvimento)
CORS_ORIGIN=http://localhost:3000

# Configurações de Email (opcional - para notificações)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@mdfe.com

# Configurações de Backup (opcional)
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * *

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100